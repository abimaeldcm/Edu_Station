@model Edu_Station.Models.Aluno

<!DOCTYPE html>
<html>
<head>
    @{
        ViewData["Title"] = "Criar Aluno";
    }
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,0,200" />
    <link rel="stylesheet" href="~/css/PagEditCreate.css">
</head>
<body class="bodyy">
    <div class="registration-form">
        <form asp-action="Editar">
            <div class="form-icon">
                <span class="material-symbols-outlined">
                    stethoscope
                </span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="NomeCompleto" class="form-control item" placeholder="Nome Completo">
                <span asp-validation-for="NomeCompleto" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="text" asp-for="CPF" class="form-control item" placeholder="CPF" required>
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" asp-for="Senha" class="form-control item" placeholder="Senha" required>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="date" asp-for="DataNascimento" class="form-control item" placeholder="Data de Nascimento" required>
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="email" asp-for="Email" class="form-control item" placeholder="E-mail" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="tel" asp-for="Telefone" class="form-control item" placeholder="Telefone" required>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="IdTurma" asp-items="@ViewBag.TurmaId" class="form-control item" required>
                    <option>Turma...</option>
                </select>
            </div>

            <div style=" display: flex; justify-content: center;">
                <div class="form-group">
                    <button type="submit" value="Editar" class="btn btn-block create-account">Editar</button>
                    <a asp-action="Index" class="btn btn-block create-account">Voltar</a>
                </div>

            </div>
        </form>
    </div>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="assets/js/script.js"></script>
</body>
</html>
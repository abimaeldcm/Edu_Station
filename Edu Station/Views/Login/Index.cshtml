@model Login
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Edu Station";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Login/Login.css" />
</head>
<body>

    <div class="container">
        <div class="left">
            <div class="header">
                <h2 class="animation a1">Seja Bem-vindo</h2>
                <h4 class="animation a2">Entre com o seu cpf e senha</h4>
            </div>
            <form method="post">
                <div class="form">
                    <input type="text" class="form-field animation a3" asp-for="User" required data-val-required="Por favor, digite o seu e-mail" placeholder="Login">

                    <input type="password" class="form-field animation a4" asp-for="Senha" required data-val-required="Por favor, digite a sua senha" placeholder="Senha">

                    <select asp-for="Perfil" asp-items="@ViewBag.PerfilId" class="form-field animation a3" required>
                        <option>Perfil</option>
                    </select>

                    <p class="animation a5"><a asp-controller="Login" asp-action="EsqueciSenha">Esqueci a minha senha</a></p>
                    <p class="animation a5"><a asp-controller="Login" asp-action="PrimeiroLogin">Primeiro login?</a></p>
                    <button asp-controller="Login" asp-action="Logar" type="submit" class="animation a6">Entrar</button>
                </div>
            </form>
        </div>
        <div class="right"></div>
    </div>

</body>
</html>
